extends layout.pug

block content
    script(src='/javascripts/questions.js' type='module')
    div
        h1(id='topic')= topic.name
    div
        for question in allQuestions
            div(class='question-divs' id=`question-container-${question.id}` style={'padding': '20px', 'border': '4px solid black'})
                a= question.title
                a= question.content
                img(src=question.imgLink)
                //- if(question.Answers)
                for answer in question.Answers
                    a(style={'padding': '10px', 'border': '4px solid black' })= answer.content
