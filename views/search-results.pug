doctype html
html
  head
      block head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
        title Gora - #{title}
        link(rel='stylesheet' href='/stylesheets/login.css')
        link(rel='stylesheet' href='/stylesheets/reset.css')
        script(src='/javascripts/search-questions.js' type='module')
        script(src='/javascripts/questions.js' type='module')

  body
    h1= questionTitle
    div
      for question in questions
        div(class='search-question-divs' id=`search-question-container-${question.id}`  style={'padding': '20px', 'dotted': '4px solid black'})
          a= question.title
          a= question.content
          img(src=question.imgLink)
