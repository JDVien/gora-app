doctype html
html
  head
      block head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
        title Gora - #{title}
        link(rel='stylesheet' href='/stylesheets/login.css')
        link(rel='stylesheet' href='/stylesheets/reset.css')
  body
    div(class='horizontal-nav')
      ul
        li(class='top-nav')
          p(id="banner") #{topic} Banner
        if (locals.authenticated)
          li(class='top-nav')
            a(href='/questions/new' id='ask-a-question') Ask a Question
        li(class='top-nav')
          div(class='search-container')
            form(action="/search-results")
              input(id="search-bar" type="search" name="term" placeholder="Search..." required)
              button(type="submit") Search Questions
        if !(locals.authenticated)
          li(class='top-nav')
            a(id="demo-login" href="/users/login/demo") Demo
          li(class='top-nav')
            a(id="user-login" href="/users/login") Log In
        else
          li(class='top-nav')
            a(id='profile' href=`/profile/${user.id}`) Profile
          li(class='top-nav')
            form(id='user-logout' action='/users/logout' method='post')
              button(id='user-logout' type='submit') Logout

    div(class='vertical-nav')
      ul
        li(class='nav-item')
          a(id="logo" href="/") Logo
        li(class='nav-item')
          a(id="all" href="/questions") All
        li(class='nav-item')
          a(id="cinema" href="/topics/1/questions") Cinema
        li(class='nav-item')
          a(id="literature" href="/topics/2/questions") Literature
        li(class='nav-item')
          a(id="gaming" href="/topics/3/questions") Gaming


    block content
